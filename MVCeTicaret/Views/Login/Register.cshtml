
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>


<div class="container">
    <div class="row" style="margin-top:50px;">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>İsim: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="name" placeholder="Adınızı Giriniz..." class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Soyisim: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="surname" placeholder="Soyadınızı Giriniz..." class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Kullanıcı Adı: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="username" placeholder="Kullanıcı Adınızı Giriniz..." class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Şifre: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" name="password" placeholder="Şifrenizi Giriniz..." class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Erkek: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="checkbox" name="gender" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Doğum Tarihi: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="date" name="birthdate" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="ÜYE OL" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>