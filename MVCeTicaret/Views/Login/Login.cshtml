
@{
    ViewBag.Title = "Login";
}




<div class="container">
    <div class="row" style="margin-top:50px;">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Kullanıcı Adı: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="username" placeholder="Kullanıcı Adını Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Şifre: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" name="password" placeholder="Şifre Giriniz..." class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" class="form-control btn btn-success" value="GİRİŞ YAP" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>